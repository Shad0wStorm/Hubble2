<Window x:Class="CobraBay.RedeemProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:LocalResources.Properties;assembly=LocalResources"
        xmlns:cbv="clr-namespace:CBViewModel;assembly=CBViewModel"
        Title="RegisterProductWindow"
        Height="440"
        Width="440"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="White"
        KeyDown="KeyPressed">

    <!-- Window Resources -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Elite/Shiny.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Grid Layout -->
    <Grid Background="#1A1A1A">
        <!-- Close Button -->
        <Button Style="{StaticResource CloseButtonStyle}" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,5,5,0" 
                Click="OnClose" />

        <!-- Main Content Grid -->
        <Grid Margin="20,33,20,33">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- Title TextBlock -->
            <TextBlock Grid.Row="1"
                       Text="{x:Static resx:Resources.RW_RedeemTitle}"
                       Grid.ColumnSpan="2"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontFamily="/EDlaunch;component/Fonts/#Euro Caps"
                       FontSize="23" />

            <!-- Intro TextBlock -->
            <TextBlock Grid.Row="3"
                       Text="{x:Static resx:Resources.RW_RedeemIntro}"
                       Grid.ColumnSpan="2"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontFamily="/EDlaunch;component/Fonts/#Euro Caps"
                       FontSize="18" />

            <!-- Button Container -->
            <Grid Grid.Row="7" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Copy Button (Collapsed) -->
                <Button Grid.Column="1"
                        x:Name="CopyButton"
                        Style="{StaticResource CopyStyle}"
                        Width="140"
                        Height="44"
                        Margin="0,0,11,0"
                        Visibility="Collapsed"
                        Click="OnCopyClick" />

                <!-- Logout Button -->
                <Button Grid.Column="1"
                        x:Name="LogoutButton"
                        Style="{StaticResource LaunchLogoutButtonStyle}"
                        Width="140"
                        Height="44"
                        Margin="0,0,11,0"
                        Click="OnLogoutClick" />

                <!-- Redeem Button (Collapsed) -->
                <Button Grid.Column="3"
                        x:Name="RedeemButton"
                        Style="{StaticResource LaunchRedeemStyle}"
                        Width="140"
                        Height="44"
                        Margin="0,0,11,0"
                        Visibility="Collapsed"
                        Click="OnRedeemClick" />
            </Grid>

            <!-- Cancel Text (Collapsed) -->
            <TextBlock Grid.Row="9"
                       Visibility="Collapsed"
                       Text="{x:Static resx:Resources.RW_RegisterCancel}"
                       Grid.ColumnSpan="2"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontFamily="/EDlaunch;component/Fonts/#Euro Caps"
                       FontSize="14" />
        </Grid>
    </Grid>
</Window>
