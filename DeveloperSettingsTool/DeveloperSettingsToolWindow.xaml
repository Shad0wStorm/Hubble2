<Window x:Class="DeveloperSettingsTool.DeveloperSettingsToolWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Override Developer Launcher FORC API Target" Height="350" Width="680"
		KeyDown="KeyActivated"
		KeyUp="KeyDeactivated"
		SizeToContent="Height"
		>
	<Grid Grid.IsSharedSizeScope="True">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				SharedSizeGroup="Buttons"
				Width="Auto" />
			<ColumnDefinition
				SharedSizeGroup="Buttons"
				Width="Auto" />
			<ColumnDefinition
				SharedSizeGroup="Buttons"
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<Label
			Grid.Row="0"
			VerticalAlignment="Center"
			Grid.Column="0">
			<TextBlock
				Text="Launcher" />
		</Label>
		<ComboBox
			Grid.Row="0"
			Grid.Column="1"
			Margin="0,16"
			SelectionChanged="LauncherSelected"
			x:Name="LauncherLocations" />
		<Button
			Grid.Row="0"
			Grid.Column="2"
			VerticalAlignment="Center"
			Content="Refresh"
			Margin="4"
			Click="RefreshLaunchers" />
		<Label
			Grid.Row="1"
			VerticalAlignment="Center"
			Grid.Column="0">
			<TextBlock
				Text="Server" />
		</Label>
		<ComboBox
			Grid.Row="1"
			Grid.Column="1"
			Margin="0,16"
			x:Name="ServerLocations" />
		<Button
			x:Name="DiscardServerButton"
			Visibility="Hidden"
			Grid.Row="1"
			Grid.Column="2"
			VerticalAlignment="Center"
			Content="Discard"
			Margin="4"
			Click="DiscardServer" />
		<Button
			x:Name="ActivateServerButton"
			Grid.Row="1"
			Grid.Column="2"
			VerticalAlignment="Center"
			Content="Activate"
			Margin="4"
			Click="ActivateServer" />
		<Button
			x:Name="RefreshServerButton"
			Grid.Row="1"
			Grid.Column="3"
			VerticalAlignment="Center"
			Content="Refresh"
			Margin="4"
			Click="RefreshServer" />
		<Button
			x:Name="EditServerButton"
			Grid.Row="1"
			Grid.Column="4"
			VerticalAlignment="Center"
			Content="Edit"
			Margin="4"
			Click="EditServer" />
	</Grid>
</Window>
