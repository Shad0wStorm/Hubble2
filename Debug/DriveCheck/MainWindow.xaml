<Window x:Class="DriveCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="ReportScroll" Grid.Row="0">
            <TextBox x:Name="ReportBox" Grid.Row="0"></TextBox>
        </ScrollViewer>
        <Button x:Name="Button" Grid.Row="1" Click="OnStart">Start</Button>
    </Grid>
</Window>
